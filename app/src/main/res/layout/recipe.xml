<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/recipe_title"
        android:layout_marginLeft="@dimen/padding8"
        android:layout_marginTop="@dimen/padding8" />

    <TextView
        android:id="@+id/recipe_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/recipe_servings"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/recipe_title"
        android:layout_marginLeft="@dimen/padding8" />

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:background="@drawable/brownies"
        android:layout_marginTop="@dimen/padding8"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/padding8" />


</RelativeLayout>