<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/widgetBackground">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_recipe_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/cheesecake"
            android:padding="4dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/widget_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_recipe_image"
            android:textColor="@color/widgetTextColor"
            tools:text="@string/recipe_title"
            android:layout_marginTop="4dp"
            android:layout_centerInParent="true"
            android:textAppearance="?android:textAppearanceMediumInverse"/>

        <TextView
            android:id="@+id/widget_recipe_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_recipe_name"
            tools:text="@string/recipe_servings"
            android:layout_centerInParent="true"
            android:textColor="@color/textColorPrimary"
            android:textAppearance="?android:textAppearanceSmall"/>

    </RelativeLayout>
    <!--<ImageView-->
        <!--android:id="@+id/widget_sync_recipes"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:src="@drawable/ic_sync"/>-->

    <ListView
        android:id="@+id/widget_ingredients_listing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5">
    </ListView>

</LinearLayout>